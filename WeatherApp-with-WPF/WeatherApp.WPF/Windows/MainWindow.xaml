<Window x:Class="WeatherApp.WPF.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherApp.WPF"
        xmlns:col="clr-namespace:System.Collections;assembly=mscorlib"
        xmlns:control="clr-namespace:WeatherApp.WPF.Controls"
        mc:Ignorable="d"
        Style="{DynamicResource WindowStyle}"
        Title="WeatherApp" Height="580" Width="1100" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" ShowInTaskbar="True">

    <!--Window Resources-->
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary x:Name="ThemeDictionary">
                    <ResourceDictionary.MergedDictionaries>
                        <ResourceDictionary Source="/Resources/Themes/dark.xaml"/>
                        <ResourceDictionary Source="/Resources/Themes/light.xaml"/>
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <Grid.Resources>
            <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
        </Grid.Resources>

        <!--Header-->
        <Grid Name="Header" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>

            <!--WPF Link-->
            <TextBlock 
               Grid.Column="0"
               HorizontalAlignment="Left" 
               Margin="30,5,30,0">
               <Hyperlink 
                   Click="WPF_ClickHandler" 
                   Style="{DynamicResource HyperlinkStyle}" > 
                   <MediaElement 
                       Height="40" 
                       Width="120" 
                       LoadedBehavior="Play" 
                       Source="Resources\Images\logo.gif" />
                 
                   <TextBlock
                       Text="Weather App with WPF"
                       Margin="0 -13 0 10"/>
               </Hyperlink>
            </TextBlock>

            <!--Toggle Theme-->
            <Border 
               Grid.Column="2" 
               BorderThickness="0" 
               HorizontalAlignment="Right" 
               Width="59"
               Margin="30,10,30,5"
               CornerRadius="15" 
               Background="#686868">
                <WrapPanel>
                    <TextBlock>
                       <Hyperlink 
                           TextDecorations="None"
                           Click="ToggleTheme_ClickHandler">

                           <!--Moon Icon-->
                           <Image 
                               Height="23"
                               Width="23"
                               Margin="3 0 3 0"
                               Source="/Resources/Images/InfoCards/moon.png"/>
                           
                           <!--Sun Icon-->
                           <Image 
                               Height="23"
                               Width="23"
                               Margin="3 0 0 0"
                               Source="/Resources/Images/InfoCards/sun.png"/>

                           <!--Light Theme Disc-->
                           <Ellipse 
                               Margin="-35 1 0 0"
                               Height="23"
                               Width="23"
                               Fill="White"
                               Visibility="{Binding Path=ThemeIsLight, Converter={StaticResource BoolToVisibility}}"/>

                           <!--Dark Theme Disk-->
                           <Ellipse 
                               Margin="-105 1 0 0"
                               Height="23"
                               Width="23"
                               Fill="White"
                               Visibility="{Binding Path=ThemeIsDark, Converter={StaticResource BoolToVisibility}}"/>
                       </Hyperlink>
                    </TextBlock>
                </WrapPanel>
            </Border>
        </Grid>

        <!--Top Separator-->
        <Separator Grid.Row="1" Background="Red" VerticalAlignment="Top" >
            <Separator.RenderTransform>
                <ScaleTransform ScaleY="2" />
            </Separator.RenderTransform>
        </Separator>

        <!--Bottom Separator-->
        <Separator Grid.Row="1" Background="Red" VerticalAlignment="Bottom" >
            <Separator.RenderTransform>
                <ScaleTransform ScaleY="2" />
            </Separator.RenderTransform>
        </Separator>

        <!--Body-->
        <Grid Name="Body" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="150" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--City Input-->
            <TextBox
                Name="CityInput" 
                Grid.Row="0" 
                Margin="0 -35 0 0"
                Padding="3"
                Height="30"
                Width="255"
                Background="White"
                BorderBrush="Black"
                BorderThickness="0 0 0 1"
                HorizontalAlignment="Center"
                TextChanged="CityInput_ChangeHandler"/>

            <!--Search Button-->
            <Button 
                Grid.Row="0" 
                Content="Search" 
                Margin="0 50 0 0"
                Height="30"
                Width="255"
                BorderThickness="2"
                Style="{DynamicResource ButtonStyle}"
                Click="SearchBtn_ClickHandler" />

            <!--Weather Info-->
            <Grid 
                Name="WeatherInfo" 
                Grid.Row="1"
                Visibility="{Binding Path=HasCity, Converter={StaticResource BoolToVisibility}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="180" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--General Info-->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--Weather Icon Background-->
                    <Ellipse 
                        Grid.Column="0"
                        HorizontalAlignment="Right"
                        Margin="0 -90 40 0"
                        Height="70"
                        Width="70"
                        Fill="Gray" />

                    <!--Weather Icon-->
                    <Image 
                        Grid.Column="0"
                        Height="80" 
                        Width="77" 
                        HorizontalAlignment="Right" 
                        Margin="0 -90 36 0"
                        Source="{Binding Icon}"/>

                    <!--City Name and Country-->
                    <TextBlock 
                        Grid.Column="1" 
                        HorizontalAlignment="Left" 
                        Margin="-20 25 0 0" 
                        FontSize="30" 
                        Text="{Binding GeneralInfo.NameAndCountry}" />

                </Grid>
                
            </Grid>
        
        <!--Footer-->
        <Grid Name="Footer" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>

            <!--Data Provider Link-->
            <TextBlock 
               Grid.Column="0"
               HorizontalAlignment="Left" 
               Margin="30,8,30,0">
               <Hyperlink 
                   Click="DataProvider_ClickHandler"
                   Style="{DynamicResource HyperlinkStyle}"> 
                   Data Provider
               </Hyperlink>
            </TextBlock>

            <!--Export Data-->
            <Menu
                Grid.Column="1"
                HorizontalAlignment="Center" 
                Margin="30,3,30,0"
                FlowDirection="LeftToRight"
                Style="{DynamicResource MenuStyle}"
                Visibility="{Binding Path=HasCity, Converter={StaticResource BoolToVisibility}}">
                    <MenuItem 
                        Name="menuitem" 
                        Height="30"
                        Width="124"
                        Padding="15 0"
                        Header="💾 Export Data">
                        <MenuItem Header="JSON" Click="ExportJson_ClickHandler" Style="{DynamicResource MenuItemStyle}" />
                        <MenuItem Header="XML" Click="ExportXml_ClickHandler" Style="{DynamicResource MenuItemStyle}" />
                    </MenuItem>
            </Menu>

            <!--Source Code Link-->
            <TextBlock 
                Grid.Column="2"
                HorizontalAlignment="Right" 
                Margin="30,8,30,0">
                <Hyperlink 
                    Click="SourceCode_ClickHandler" 
                    Style="{DynamicResource HyperlinkStyle}"> 
                    Source Code
                </Hyperlink>
            </TextBlock>
        </Grid>
    </Grid>
</Window>
